<% include partials/header%>

<div class="row">
  <div class="form-size auth" id="login">
    <h5 class="text-center">Login to YelpCamp</h5>
    <form action="/login" method="POST">
      <div class="form-group">
          <input class="form-control" type="text" name="username" placeholder="Username">
      </div>
      <div class="form-group">
          <input class="form-control" type="password" name="password" placeholder="Password">
      </div>
      <div class="form-group">
          <button class="btn btn-sm btn-primary btn-block">Login</button>
      </div>
    </form>
    <p>Not a member? Register <a href="/register">now</a>.</p>
    <a class="back" href="/campgrounds">Go Back</a>
  </div>
</div>

<% include partials/footer%>
