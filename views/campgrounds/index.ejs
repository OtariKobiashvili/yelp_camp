<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Yelp Camp</title>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css" integrity="sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M"
        crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/starability-grow.min.css">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN"
        crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/main.css">
</head>

<body>
    <nav class="navbar navbar-expand-md navbar-light bg-faded">
        <div class="container">
            <a class="navbar-brand" href="/">YelpCamp</a>
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>


            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="nav navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link <%= typeof page !== 'undefined' && page === 'campgrounds' ? 'active' : '' %>" href="/campgrounds">Home</a>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right ml-auto">
                    <% if(!currentUser){ %>
                        <li class="nav-item">
                            <a class="nav-link <%= typeof page !== 'undefined' && page === 'login' ? 'active' : '' %>" href="/login">Log In</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link <%= typeof page !== 'undefined' && page === 'register' ? 'active' : '' %>" href="/register">Register</a>
                        </li>
                        <% } else { %>
                            <li class="nav-item">
                                <a class="nav-link" href="/users/<%= currentUser.id %>">Signed In As <%= currentUser.username%><a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Log Out</a>
                            </li>
                            <% } %>
                </ul>
            </div>
        </div>
    </nav>

    <header class="jumbotron">
        <div class="container">
            <% if(error && error.length > 0) { %>
                <div class="container">
                    <div class="alert alert-danger" role="alert">
                        <%= error %>
                    </div>
                </div>
            <% } else if(success && success.length > 0){ %>
                <div class="container">
                    <div class="alert alert-success" role="alert">
                        <%= success %>
                    </div>
                </div>
            <% } %>
            <h1>Own your journey</h1>
            <p class="small">View our hand-picked campgrounds from all over the globe.</p>
            <p>
                <a class="btn btn-primary btn-md" href="/campgrounds/new">New Campground</a>
            </p>
            <hr>
            <div class="form-group">
                <input id="campground-search" type="text" name="search" placeholder="Search Campgrounds..." class="form-control">
                <span><button class="btn btn-primary" id="search-btn"><i class="fa fa-search" aria-hidden="true"></i></button></span>
            </div>
            <span class="small" id="search-message">No campgrounds found. Please try again.</span>
        </div>
    </header>

    <div class="container campgrounds-container">
        <div class="row text-center" id="campground-grid">
            <% campgrounds.forEach(function(camp){ %>
                <div class="col-md-4 col-sm-6 campground-card">
                    <div class="img-thumbnail">
                        <img class="img-fluid" src="<%= camp.image %>">
                        <div class="caption">
                            <h5>
                                <%= camp.name %>
                            </h5>
                        </div>
                        <p>
                            <a href="/campgrounds/<%= camp._id%>" class="btn btn-sm btn-primary"><i class="fa fa-info-circle" aria-hidden="true"></i> More Info</a>
                        </p>
                        <% if(currentUser && currentUser.isAdmin){ %>
                            <p>
                                <a class="btn btn-sm btn-warning" href="/campgrounds/<%= camp._id %>/edit">Edit</a>
                                <form class="delete-form" action="/campgrounds/<%= camp._id %>?_method=DELETE" method="POST">
                                    <button class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            </p>
                            <% } %>
                    </div>
                </div>
                <% }); %>
        </div>

<% include ../partials/footer%>
