<% include ../partials/header%>


        <header class = "jumbotron">
            <div class = "container">
                <h1 class = "display-3">Welcome to YelpCamp</h1>
                <p>View our hand-picked campgrounds from all over.</p>
                <p>
                    <a class = "btn btn-primary btn-md" href ="/campgrounds/new">Add a new campground</a>
                </p>
            </div>
        </header>

        <a href="/">Home</a>
        <div class = "row">
            <div class = "col-lg-12">
                <h3>Our Most Popular Campgrounds</h3>
            </div>
        </div>

        <div class = "row text-center">
            <% campgrounds.forEach(function(camp){ %>
                <div class = "col-md-3 col-sm-6">
                    <div class = "img-thumbnail">
                        <img class ="img-fluid" src="<%= camp.image %>">
                        <div class = "caption">
                            <h5><%= camp.name %></h5>
                        </div>
                        <p>
                            <a href = "/campgrounds/<%= camp._id%>" class = "btn btn-primary">More Info</a>
                        </p>
                    </div>
                </div>
            <% }); %>
        </div>



<% include ../partials/footer%>
