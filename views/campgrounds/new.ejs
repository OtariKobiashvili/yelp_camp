<% include ../partials/header%>

        <h2 class = "text-center">New Campground</h2>
        <div class = "row">
            <div class="form-size">
                <form action="/campgrounds" method="POST">
                    <div class = "form-group">
                        <input class ="form-control" type="text" placeholder="Name" name="name"></input>
                    </div>
                    <div class = "form-group">
                        <input class ="form-control" type="number" placeholder="Price" name="price" min="0.01" step="0.01"></input>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="location" id="location" placeholder="Location">
                    </div>
                    <div class = "form-group">
                        <input class ="form-control" type="text" placeholder="Campground Image" name="image"></input>
                    </div>
                    <div class = "form-group">
                        <textarea class ="form-control" name="description" rows="10" placeholder="Please describe the campground"></textarea>
                    </div>
                    <div class = "form-group">
                        <button class= "btn btn-lg btn-primary btn-block">Submit</button>
                    </div>
                </form>
                <a href="/campgrounds">Go Back</a>
            </div>
        </div>

<% include ../partials/footer %>
