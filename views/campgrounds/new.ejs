<% include ../partials/header%>

        <h3 class = "text-center">New Campground</h3>
        <div class = "row">
            <div class="form-size">
                <form action="/campgrounds" method="POST" id="form">
                    <div class = "form-group">
                        <input class ="form-control" type="text" placeholder="Name" name="name" required="required" ></input>
                    </div>
                    <div class = "form-group">
                        <input class ="form-control" type="number" placeholder="Price" name="price" min="0.01" step="0.01" required="required"></input>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="location" id="location" placeholder="Location" required="required">
                    </div>
                    <div class = "form-group">
                        <input id ="image-search" class ="form-control" type="text" placeholder="https://images.unsplash.com/..." name="image"></input>
                        <small class="small text-muted">Click <a href="https://youtu.be/Bn3weNRQRDE">here</a> for Unsplash URL tutorial.</small>
                    </div>
                    <div class="form-group">
                        <img class="form-control" src="">
                        <p class="text-muted small text-center"></p>
                    </div>
                    <div class = "form-group">
                        <textarea class ="form-control" name="description" rows="7" placeholder="Please describe the campground" required="required"></textarea>
                    </div>
                    <div class = "form-group">
                        <button class= "btn btn-primary btn-block">Submit</button>
                        <p class="text-muted small text-center"></p>
                    </div>
                </form>
                <a class="back" href="/campgrounds">Go Back</a>
            </div>
        </div>

<% include ../partials/footer %>
